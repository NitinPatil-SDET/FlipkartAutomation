<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Flipkart Parallel Suite" parallel="tests" thread-count="5">
  
  <test name="Chrome - Windows 11">
    <parameter name="os" value="Windows"/>
    <parameter name="osVersion" value="11"/>
    <parameter name="browser" value="Chrome"/>
    <parameter name="browserVersion" value="latest"/>
    <classes>
      <class name="TestCases.TC02_SearchFilterParallelTest"/>
    </classes>
  </test>

  <test name="Firefox - Windows 10">
    <parameter name="os" value="Windows"/>
    <parameter name="osVersion" value="10"/>
    <parameter name="browser" value="Firefox"/>
    <parameter name="browserVersion" value="latest"/>
    <classes>
      <class name="TestCases.TC02_SearchFilterParallelTest"/>
    </classes>
  </test>

  <test name="Edge - Windows 11">
    <parameter name="os" value="Windows"/>
    <parameter name="osVersion" value="11"/>
    <parameter name="browser" value="Edge"/>
    <parameter name="browserVersion" value="latest"/>
    <classes>
      <class name="TestCases.TC02_SearchFilterParallelTest"/>
    </classes>
  </test>

  <test name="Safari - macOS Monterey">
    <parameter name="os" value="OS X"/>
    <parameter name="osVersion" value="Monterey"/>
    <parameter name="browser" value="Safari"/>
    <parameter name="browserVersion" value="latest"/>
    <classes>
      <class name="TestCases.TC02_SearchFilterParallelTest"/>
    </classes>
  </test>

  <test name="Chrome - macOS Ventura">
    <parameter name="os" value="OS X"/>
    <parameter name="osVersion" value="Ventura"/>
    <parameter name="browser" value="Chrome"/>
    <parameter name="browserVersion" value="latest"/>
    <classes>
      <class name="TestCases.TC02_SearchFilterParallelTest"/>
    </classes>
  </test>

</suite>
